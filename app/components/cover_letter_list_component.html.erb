<div>
  <% @cover_letters.each do |cover_letter| %>
    <%= render CoverLetterComponent.new(cover_letter: cover_letter) do |c| %>
      <%= c.show_button(path: cover_letter_path(cover_letter), text: 'Show', id: "cover-letter-show-button-#{cover_letter.id}") %>
      <%= c.edit_button(path: edit_cover_letter_path(cover_letter),
        path: edit_cover_letter_path(cover_letter),
        frame: "cover_letter#{cover_letter.id}_edit",
        action: "click->hide#hide",
        text: 'Edit',
        data: { 'hide' => true, 'hide-target' => 'source' }
      ) %>
      <%= c.with_divider %>
    <% end %>
  <% end %>
</div>
